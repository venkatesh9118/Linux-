pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                echo "Code checked out from GitHub"
            }
        }

        stage('List Files') {
            steps {
                sh 'ls -l'
            }
        }

        stage('Read README') {
            steps {
                sh 'cat README.md'
            }
        }
    }
}
